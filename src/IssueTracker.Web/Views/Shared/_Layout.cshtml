@{
  ViewData["Title"] = "Issue Tracker";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"]</title>
  <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
</head>
<body>
<div class="h-screen flex flex-col">
  <header class="bg-gray-900">
    <nav>
      <div class="flex flex-wrap justify-between items-center mx-auto p-4">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-3">
          <img src="favicon.ico" class="h-8" alt="IssueTracker Logo">
          <span class="self-center text-2xl font-semibold whitespace-nowrap text-white">IssueTracker</span>
        </a>
        <div class="flex items-center space-x-6">
          <a class="text-sm text-white hover:underline">Login</a>
          <a class="text-sm text-white hover:underline">Logout</a>
        </div>
      </div>
    </nav>
  </header>

  <main class="flex-grow overflow-y-auto bg-gray-50">
    @RenderBody()
  </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>