@model LoginRequestModel

<section class="relative top-1/2 -translate-y-1/2 max-w-lg mx-auto">
  <form id="login" method="post" class="grid grid-rows-1 gap-1">
    <div class="grid grid-rows-1 gap-1">
      <label asp-for="@Model.Email"></label>
      <input asp-for="@Model.Email"
             class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5"/>
      <span asp-validation-for="@Model.Email"></span>
    </div>

    <div class="grid grid-rows-1 gap-1">
      <label asp-for="@Model.Password"></label>
      <input asp-for="@Model.Password" type="password"
             class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5"/>
      <span asp-validation-for="@Model.Password"></span>
    </div>

    <div class="flex items-center">
      <label asp-for="@Model.RememberMe"></label>
      <input asp-for="@Model.RememberMe"
             lass="ml-2 w-4 h-4 border border-gray-300 rounded bg-gray-50"/>
    </div>

    <button type="submit"
            class="text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center">
      Log in
    </button>
  </form>

  <hr class="mt-2 h-px bg-gray-400">
  <footer>
    <p>
      Don't have an account?
      <a asp-action="Register" class="font-semibold text-blue-500 hover:underline">Register!</a>
    </p>
  </footer>
</section>